<div class="container">
 <h1>Eat-Da-Burger!</h1><h5>(Customize the Menu)</h5>
    <div id="main-block">
     
       <h2>Order Burgers From Custom Menu!</h2>
       <ul>
          {{!-- {{#each burger}} --}}
          {{#each burgers}}

            {{#unless devoured}}
<li>
	#{{this.id}}:{{burger_name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="true">
		{{#if sleep}}Devour-It!{{else}}Devoured/Eat-Again?{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
            {{/unless}}
          {{/each}}
       </ul>
    </div>


    <div id="sidebar">
     <h2>Burgers Previously Ordered/Devoured!</h2>

          <ul> 
          {{!-- {{#each burger}} --}}
          {{#each burgers}}
              {{#if devoured}}
<li>
	#{{this.id}}:{{burger_name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="false">
		{{#if sleep}}Devour-It!{{else}}Devoured/Eat-Again?{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
             {{/if}}
           {{/each}}
         </ul>
    </div>

<div class="clr"></div>

<div class="center">
  <h2>Add a Burger</h2>
    <form class="create-form">

       <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name" placeholder="e.g. Tasty Burger">
        </div>

       <div class="form-group">
         <label for="devoured">Pick a Category?</label><br>
        
          <input type="radio" name="devoured" value="0"checked> "New" For Custom Order! <br>
          <input type="radio" name="devoured" value="1" > "Old" Order/Devoured!
       </div>

       <button type="submit">Add Burger</button>
      </form>
</div>
</div><!-- ./container -->
</div><!-- ./container -->